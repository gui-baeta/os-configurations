{ config, pkgs, ... }:

{
  programs.home-manager.enable = true;

  home.stateVersion = "24.11";

  home.username = "guibaeta";
  home.homeDirectory = "/home/guibaeta";

  programs.helix = {
    enable = true;
    settings = {
      theme = "autumn_night_transparent";
